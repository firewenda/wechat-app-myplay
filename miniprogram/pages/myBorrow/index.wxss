/**index.wxss**/

.container {
  background-color: #F2f2f2;
  min-height: 100%;
  padding-top: 120rpx;
}

.goods-container{
  width: 100%;
  box-sizing: content-box;
}
.goods-box{
  padding: 24rpx;
  background-color: #fff;
  overflow: hidden;
  margin: 0 auto 24rpx;
}
.goods-box .img-box{
  width: 250rpx;
  overflow: hidden;
  float: left;
  margin-right: 30rpx;
}
.goods-box .img-box image{
  width: 100%;
  height: 300rpx;
}
.goods-box .goods-title{
  width: 360rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 26rpx;
  padding: 12rpx 0 0rpx 0;
  color:#000;
  margin-left: 24rpx;
}
.goods-box .btn-row{
  margin-top: 12rpx;
}